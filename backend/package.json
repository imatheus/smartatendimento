{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "start": "nodemon dist/server.js",
    "dev:server": "ts-node-dev --respawn --transpile-only --ignore node_modules src/server.ts",
    "dev": "ts-node-dev --respawn --transpile-only --ignore node_modules src/server.ts",
    "db:migrate": "npx sequelize db:migrate",
    "db:seed": "sequelize db:seed:all",
    "pretest": "NODE_ENV=test sequelize db:migrate && NODE_ENV=test sequelize db:seed:all",
    "test": "NODE_ENV=test jest",
    "posttest": "NODE_ENV=test sequelize db:migrate:undo:all",
    "lint": "eslint src/**/*.ts",
    "test:webhook": "node test-webhook.js",
    "test:webhook:created": "node test-webhook.js PAYMENT_CREATED",
    "test:webhook:confirmed": "node test-webhook.js PAYMENT_CONFIRMED",
    "test:webhook:overdue": "node test-webhook.js PAYMENT_OVERDUE",
    "check-unused-deps": "node check-unused-deps.js",
    "check-unused-deps:detailed": "node check-unused-deps-detailed.js"
  },
  "dependencies": {
    "@adiwajshing/baileys": "^4.4.0",
    "@sentry/node": "^9.29.0",
    "@whiskeysockets/baileys": "^6.7.18",
    "axios": "^0.21.1",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "faker": "^6.6.6",
    "form-data": "^4.0.0",
    "gn-api-sdk-typescript": "^2.0.1",
    "http-graceful-shutdown": "^3.1.14",
    "jsonwebtoken": "^8.5.1",
    "libphonenumber-js": "^1.9.51",
    "multer": "^1.4.4",
    "mustache": "^4.2.0",
    "pg": "^8.7.3",
    "pino": "^7.8.0",
    "pino-pretty": "^13.0.0",
    "puppeteer": "^24.10.1",
    "qrcode-terminal": "^0.12.0",
    "reflect-metadata": "^0.1.13",
    "sequelize-cli": "^6.6.3",
    "sequelize-typescript": "^2.1.6",
    "socket.io": "^4.4.1",
    "uuid": "^8.3.2",
    "xlsx": "^0.18.5",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^17.0.21",
    "@types/pino": "^7.0.4",
    "@types/uuid": "^10.0.0",
    "@types/yup": "^0.29.14",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  }
}
